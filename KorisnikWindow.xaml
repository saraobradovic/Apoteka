<Window x:Class="ApotekaApp.KorisnikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apoteka - Online Kupovina" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <!-- Stil za dugmad -->
        <Style x:Key="KorisnikButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil za list box item -->
        <Style x:Key="KategorijaItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="8,6"
                                Cursor="Hand"
                                BorderThickness="1"
                                BorderBrush="Transparent"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil za proizvod kartice -->
        <Style x:Key="ProizvodCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="180"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Stil za search textbox -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"/>
                                <TextBlock x:Name="placeholderText"
                                           Text="🔍 Pretraži proizvode..."
                                           Foreground="Gray"
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Vaš postojeći Grid layout -->
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="277"/>
        </Grid.ColumnDefinitions>

        <!-- KATEGORIJE -->
        <Border Grid.Column="0" 
                Background="White" 
                Margin="0,0,5,0"
                BorderThickness="1" 
                BorderBrush="{DynamicResource PrimaryBrush}"
                CornerRadius="8">
            <StackPanel Margin="10">
                <Border Background="{DynamicResource PrimaryBrush}" 
                        Padding="12,8" 
                        Margin="0,0,0,12"
                        BorderThickness="0"
                        CornerRadius="6">
                    <TextBlock Text="💊 Kategorije" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </Border>
                <ListBox x:Name="listBoxKategorije" 
                         Background="White" 
                         BorderBrush="{DynamicResource PrimaryBrush}"
                         BorderThickness="1"
                         SelectionChanged="listBoxKategorije_SelectionChanged"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Height="430"
                         ItemContainerStyle="{StaticResource KategorijaItemStyle}"/>
            </StackPanel>
        </Border>

        <!-- PROIZVODI -->
        <Border Grid.Column="1" 
                Background="White" 
                BorderThickness="1" 
                BorderBrush="{DynamicResource PrimaryBrush}"
                Margin="0,0,5,0"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- SEARCH PANEL -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource BackgroundBrush}" 
                        Margin="10,10,10,5"
                        Padding="10"
                        BorderThickness="0"
                        CornerRadius="6">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="txtPretraga"
                                 Style="{StaticResource SearchTextBoxStyle}"
                                 Width="200"
                                 TextChanged="TxtPretraga_TextChanged"/>
                        <Button x:Name="btnOcistiPretragu"
                                Content="❌"
                                ToolTip="Očisti pretragu"
                                Style="{StaticResource KorisnikButton}"
                                Background="LightGray"
                                Foreground="Black"
                                Width="30"
                                Height="30"
                                Margin="10,0,0,0"
                                Click="BtnOcistiPretragu_Click"
                                Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- PROIZVODI PANEL -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="wrapPanelProizvodi" Margin="10"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- KORPA -->
        <Border Grid.Column="2" 
                Background="White"
                BorderThickness="1" 
                BorderBrush="{DynamicResource PrimaryBrush}"
                CornerRadius="8">
            <StackPanel Margin="10">
                <Border Background="{DynamicResource SecondaryBrush}" 
                        Padding="12,8" 
                        Margin="0,0,0,12"
                        BorderThickness="0"
                        CornerRadius="6">
                    <TextBlock Text="🛒 Vaša Korpa" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </Border>
                <Border Background="#F8F9FA" 
                        Height="380" 
                        Margin="0,0,0,12"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        CornerRadius="6">
                    <ListBox x:Name="listBoxKorpa" 
                             Background="Transparent" 
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </Border>
                <Border Background="{DynamicResource PrimaryBrush}" 
                        Padding="12,8"
                        Margin="0,0,0,10"
                        BorderThickness="0"
                        CornerRadius="6">
                    <TextBlock x:Name="textBlockUkupno" 
                               Text="Ukupno: 0.00 KM" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               FontSize="13"
                               HorizontalAlignment="Center"/>
                </Border>
                <Button Content=" Završi Kupovinu" 
                        Style="{StaticResource KorisnikButton}"
                        Background="#FF9800"
                        Height="32"
                        FontSize="12"
                        Click="BtnKupi_Click"
                        Margin="0,0,0,6"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>