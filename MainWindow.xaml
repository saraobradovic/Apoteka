<Window x:Class="ApotekaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apoteka" 
        Height="450" 
        Width="800"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <DataGrid x:Name="dataGridProizvodi" 
                  Margin="10,10,10,60" 
                  AutoGenerateColumns="True"
                  Background="White"
                  BorderBrush="{DynamicResource PrimaryBrush}"
                  BorderThickness="1"/>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom" 
                    Margin="10,0,0,10">
            <Button x:Name="btnDodaj" 
                    Content="Dodaj" 
                    Width="80" 
                    Margin="5" 
                    Click="BtnDodaj_Click"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="btnUredi" 
                    Content="Uredi" 
                    Width="80" 
                    Margin="5" 
                    Click="BtnUredi_Click"
                    Background="{DynamicResource SecondaryBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="btnObrisi" 
                    Content="Obrisi" 
                    Width="80" 
                    Margin="5" 
                    Click="BtnObrisi_Click"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="btnKreirajNarudzbu" 
                    Content="Kreiraj Narudžbu" 
                    Width="120" 
                    Margin="5" 
                    Click="BtnKreirajNarudzbu_Click"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>