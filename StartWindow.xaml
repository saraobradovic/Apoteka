<Window x:Class="ApotekaApp.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virtuelna apoteka"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Button x:Name="btnPrijava"
                Content="Prijava (Administrator)"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,15,15,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="{DynamicResource PrimaryBrush}"
                FontWeight="Bold"
                FontSize="12"
                Cursor="Hand"
                Click="BtnPrijava_Click"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Odaberite temu:"
                       FontSize="16"
                       Foreground="{DynamicResource TextBrush}"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Button x:Name="btnTema1" Content="Zelena" 
                        Width="80" Height="30" Margin="5"
                        Background="{DynamicResource PrimaryBrush}" 
                        Foreground="White"
                        Click="BtnTema1_Click"/>
                <Button x:Name="btnTema2" Content="Plava" 
                        Width="80" Height="30" Margin="5"
                        Background="{DynamicResource PrimaryBrush}" 
                        Foreground="White"
                        Click="BtnTema2_Click"/>
                <Button x:Name="btnTema3" Content="Ljubičasta" 
                        Width="80" Height="30" Margin="5"
                        Background="{DynamicResource PrimaryBrush}" 
                        Foreground="White"
                        Click="BtnTema3_Click"/>
            </StackPanel>

            <TextBlock Text="Želimo Vam ugodnu kupovinu!"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryBrush}"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <Button x:Name="btnKorisnik"
                    Content="Započni kupovinu"
                    Width="220" 
                    Height="45"
                    Background="{DynamicResource SecondaryBrush}"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnKorisnik_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>