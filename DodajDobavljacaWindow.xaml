<Window x:Class="ApotekaApp.DodajDobavljacaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Dobavljača" 
        Height="660" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CaretBrush" Value="Black"/>
        </Style>

        <Style x:Key="FormButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource AccentBrush}" 
                Padding="15,10"
                CornerRadius="6"
                Margin="0,0,0,15">
            <TextBlock Text="🏢 Dodaj Dobavljača" 
                       Foreground="White" 
                       FontSize="14" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Unos naziva -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Naziv dobavljača:" 
                       Foreground="{DynamicResource TextBrush}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       FontSize="12"/>
            <TextBox x:Name="txtNazivDobavljaca" 
                     Style="{StaticResource FormTextBox}"
                     Height="35"
                     FontSize="13"/>
        </StackPanel>

        <!-- Prazan prostor -->
        <Border Grid.Row="3" Background="Transparent"/>

        <!-- Dugmad -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Margin="0,15,0,0">
            <Button Content="💾 Sačuvaj" 
                    Width="100" 
                    Height="35" 
                    Margin="5" 
                    Click="BtnSačuvaj_Click"
                    Style="{StaticResource FormButton}"
                    Background="{DynamicResource SecondaryBrush}"
                    Foreground="Black"/>
            <Button Content="❌ Otkaži" 
                    Width="100" 
                    Height="35" 
                    Margin="5" 
                    Click="BtnOtkaži_Click"
                    Style="{StaticResource FormButton}"
                    Background="{DynamicResource PrimaryBrush}"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>